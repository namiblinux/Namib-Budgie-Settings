 
post_install() {
    \ln -sf /etc/lightdm_budgie/lightdm.conf /etc/lightdm/lightdm.conf
    \ln -sf /usr/share/glib-2.0/schemas/com.solus-project.budgie-panel-namib.gschema.xml /usr/share/glib-2.0/schemas/com.solus-project.budgie-panel.gschema.xml

	glib-compile-schemas /usr/share/glib-2.0/schemas
    echo "GLib schemas compiled"
}

post_upgrade() {
    post_install $1
}
